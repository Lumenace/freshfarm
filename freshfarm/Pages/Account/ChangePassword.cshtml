@page
@model freshfarm.Pages.Account.ChangePasswordModel

<div class="container mt-5">
    <h1 class="mb-3">Change Password</h1>
    <p>Update your password below.</p>

    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <label class="form-label" asp-for="CPModel.CurrentPassword">Current Password</label>
            <input type="password" asp-for="CPModel.CurrentPassword" class="form-control" required />
            <span class="text-danger" asp-validation-for="CPModel.CurrentPassword"></span>
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="CPModel.NewPassword">New Password</label>
            <input type="password" asp-for="CPModel.NewPassword" class="form-control" required />
            <span class="text-danger" asp-validation-for="CPModel.NewPassword"></span>
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="CPModel.ConfirmNewPassword">Confirm New Password</label>
            <input type="password" asp-for="CPModel.ConfirmNewPassword" class="form-control" required />
            <span class="text-danger" asp-validation-for="CPModel.ConfirmNewPassword"></span>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Change Password</button>
        </div>

        <div>
            <a asp-page="/Account/Profile">Back to Profile</a>
        </div>
    </form>
</div>
