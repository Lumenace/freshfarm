@page
@model freshfarm.Pages.Account.ForgotPasswordModel

<div class="container mt-5">
    <h1 class="mb-3">Forgot Password</h1>
    <p>Enter your email address below and we'll send you a password reset link.</p>

    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <label class="form-label" asp-for="FPModel.Email">Email Address</label>
            <input type="email" asp-for="FPModel.Email" class="form-control" required />
            <span class="text-danger" asp-validation-for="FPModel.Email"></span>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Send Reset Link</button>
        </div>

        <div>
            <a asp-page="/Account/Login">Back to Login</a>
        </div>
    </form>
</div>
